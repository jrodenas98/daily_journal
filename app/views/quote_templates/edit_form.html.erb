<h1>
  Edit quote #<%= @quote.id %>
</h1>

<hr>

<form action="/update_quote/<%= @quote.id %>" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @quote.body %>">
  </div>

  <div class="form-group">
    <label for="author">
      Author
    </label>

    <input type="text" id="author" name="author" class="form-control" value="<%= @quote.author %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update quote
  </button>
</form>

<hr>

<a href="/quotes">
  Go back
</a>
