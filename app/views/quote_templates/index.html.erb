<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All quotes
    </h1>

    <a href="/quotes/new" class="btn btn-block btn-outline-secondary">
      Add a new quote
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Author
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @quotes.each do |quote| %>
      <tr>
        <!-- Display quote.id start -->
        <td>
          <%= quote.id %>
        </td>
        <!-- Display quote.id end -->

        <!-- Display quote.body start -->
        <td>
          <%= quote.body %>
        </td>
        <!-- Display quote.body end -->

        <!-- Display quote.author start -->
        <td>
          <%= quote.author %>
        </td>
        <!-- Display quote.author end -->

        <!-- Display quote.created_at start -->
        <td>
          <%= time_ago_in_words(quote.created_at) %> ago
        </td>
        <!-- Display quote.created_at end -->

        <!-- Display quote.updated_at start -->
        <td>
          <%= time_ago_in_words(quote.updated_at) %> ago
        </td>
        <!-- Display quote.updated_at end -->

        <td>
          <a href="/quotes/<%= quote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
