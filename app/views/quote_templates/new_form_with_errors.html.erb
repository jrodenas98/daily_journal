<!-- Validation failure messages -->
<% if @quote.present? %>
  <% if @quote.errors.any? %>
    <% @quote.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new quote
</h1>


<hr>

<!-- Form quote start -->
<form action="/create_quote" method="post">
<!-- Form quote end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control" value="<%= @quote.body %>">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for author start -->
  <div class="form-group">
    <label for="author">
      Author
    </label>

    <!-- Input for author start -->
    <input type="text" id="author" name="author" class="form-control" value="<%= @quote.author %>">
    <!-- Input for author end -->
  </div>
  <!-- Label and input for author end -->

  <button class="btn btn-block btn-outline-secondary">
    Create quote
  </button>
</form>

<hr>

<a href="/quotes">
  Go back
</a>
