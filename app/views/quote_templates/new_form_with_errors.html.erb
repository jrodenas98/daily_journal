<% if @quote.present? %>
  <% if @quote.errors.any? %>
    <% @quote.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new quote
</h1>


<hr>

<form action="/create_quote" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @quote.body %>">
  </div>

  <div class="form-group">
    <label for="author">
      Author
    </label>

    <input type="text" id="author" name="author" class="form-control" value="<%= @quote.author %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create quote
  </button>
</form>

<hr>

<a href="/quotes">
  Go back
</a>
