<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Journals

    <a data-toggle="collapse" href="#user_user_journals_new_form">
      Add user entry
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.user_journals.each do |user_entry| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/user_entries/<%= user_entry.id %>">
          <%= user_entry.user_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
