<h1>
  Add a new journal prompt
</h1>


<hr>

<!-- Form journal_prompt start -->
<form action="/create_journal_prompt" method="post">
<!-- Form journal_prompt end -->

  <!-- Label and input for prompt_text start -->
  <div class="form-group">
    <label for="prompt_text">
      Prompt text
    </label>

    <!-- Input for prompt_text start -->
    <textarea id="prompt_text" name="prompt_text" class="form-control" rows="3"></textarea>
    <!-- Input for prompt_text end -->
  </div>
  <!-- Label and input for prompt_text end -->

  <!-- Label and input for day start -->
  <div class="form-group">
    <label for="day">
      Day
    </label>

    <!-- Input for day start -->
    <input type="text" id="day" name="day" class="form-control">
    <!-- Input for day end -->
  </div>
  <!-- Label and input for day end -->

  <!-- Label and input for journal_method_id start -->
  <div class="form-group">
    <label for="journal_method_id">
      Journal method
    </label>

    <!-- Input for journal_method_id start -->
    <input type="text" id="journal_method_id" name="journal_method_id" class="form-control">
    <!-- Input for journal_method_id end -->
  </div>
  <!-- Label and input for journal_method_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create journal prompt
  </button>
</form>

<hr>

<a href="/journal_prompts">
  Go back
</a>
