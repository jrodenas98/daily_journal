<% if @journal_prompt.errors.any? %>
  <% @journal_prompt.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit journal prompt #<%= @journal_prompt.id %>
</h1>

<hr>

<form action="/update_journal_prompt/<%= @journal_prompt.id %>" method="post">

  <div class="form-group">
    <label for="prompt_text">
      Prompt text
    </label>

    <textarea id="prompt_text" name="prompt_text" class="form-control" rows="3"><%= @journal_prompt.prompt_text %></textarea>
  </div>

  <div class="form-group">
    <label for="day">
      Day
    </label>

    <input type="text" id="day" name="day" class="form-control" value="<%= @journal_prompt.day %>">
  </div>

  <div class="form-group">
    <label for="journal_method_id">
      Journal method
    </label>

    <%= select_tag(:journal_method_id, options_from_collection_for_select(JournalMethod.all, :id, :name, @journal_prompt.journal_method_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update journal prompt
  </button>
</form>

<hr>

<a href="/journal_prompts">
  Go back
</a>
