<form action="/create_user_entry_from_journal_prompt" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <input type="hidden" name="prompt_id" value="<%= @journal_prompt.id %>">

  <div class="form-group">
    <label for="response">
      Response
    </label>

    <input type="text" id="response" name="response" class="form-control" value="<%= @user_entry.response %>">
  </div>

  <div class="form-group">
    <label for="headline">
      Headline
    </label>

    <textarea id="headline" name="headline" class="form-control" rows="3"><%= @user_entry.headline %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create user entry
  </button>
</form>
