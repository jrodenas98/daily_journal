<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All journal prompts
    </h1>

    <a href="/journal_prompts/new" class="btn btn-block btn-outline-secondary">
      Add a new journal prompt
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Prompt text
        </th>

        <th>
          Day
        </th>

        <th>
          Journal method
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @journal_prompts.each do |journal_prompt| %>
      <tr>
        <!-- Display journal_prompt.id start -->
        <td>
          <%= journal_prompt.id %>
        </td>
        <!-- Display journal_prompt.id end -->

        <!-- Display journal_prompt.prompt_text start -->
        <td>
          <%= journal_prompt.prompt_text %>
        </td>
        <!-- Display journal_prompt.prompt_text end -->

        <!-- Display journal_prompt.day start -->
        <td>
          <%= journal_prompt.day %>
        </td>
        <!-- Display journal_prompt.day end -->

        <!-- Display journal_prompt.journal_method_id start -->
        <td>
          <%= journal_prompt.journal_method_id %>
        </td>
        <!-- Display journal_prompt.journal_method_id end -->

        <!-- Display journal_prompt.created_at start -->
        <td>
          <%= time_ago_in_words(journal_prompt.created_at) %> ago
        </td>
        <!-- Display journal_prompt.created_at end -->

        <!-- Display journal_prompt.updated_at start -->
        <td>
          <%= time_ago_in_words(journal_prompt.updated_at) %> ago
        </td>
        <!-- Display journal_prompt.updated_at end -->

        <td>
          <a href="/journal_prompts/<%= journal_prompt.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
