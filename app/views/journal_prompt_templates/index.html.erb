<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All journal prompts
    </h1>

    <a href="/journal_prompts/new" class="btn btn-block btn-outline-secondary">
      Add a new journal prompt
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "journal_prompt_templates/journal_prompts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Prompt text
        </th>

        <th>
          Day
        </th>

        <th>
          Journal method
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @journal_prompts.each do |journal_prompt| %>
      <tr>
        <td>
          <%= journal_prompt.id %>
        </td>

        <td>
          <%= journal_prompt.prompt_text %>
        </td>

        <td>
          <%= journal_prompt.day %>
        </td>

        <td>
          <% if journal_prompt.journal_method.present? %>
            <a href="/journal_methods/<%= journal_prompt.journal_method.id %>">
              <%= journal_prompt.journal_method.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(journal_prompt.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(journal_prompt.updated_at) %> ago
        </td>

        <td>
          <a href="/journal_prompts/<%= journal_prompt.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @journal_prompts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
