<!-- Validation failure messages -->
<% if @journal_method.present? %>
  <% if @journal_method.errors.any? %>
    <% @journal_method.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new journal method
</h1>


<hr>

<!-- Form journal_method start -->
<form action="/create_journal_method" method="post">
<!-- Form journal_method end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @journal_method.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @journal_method.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Create journal method
  </button>
</form>

<hr>

<a href="/journal_methods">
  Go back
</a>
