<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All journal methods
    </h1>

    <a href="/journal_methods/new" class="btn btn-block btn-outline-secondary">
      Add a new journal method
    </a>
  </div>
</div>

<!-- Ransack Code start -->

