<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @journal_methods.each do |journal_method| %>
      <tr>
        <!-- Display journal_method.id start -->
        <td>
          <%= journal_method.id %>
        </td>
        <!-- Display journal_method.id end -->

        <!-- Display journal_method.name start -->
        <td>
          <%= journal_method.name %>
        </td>
        <!-- Display journal_method.name end -->

        <!-- Display journal_method.description start -->
        <td>
          <%= journal_method.description %>
        </td>
        <!-- Display journal_method.description end -->

        <!-- Display journal_method.created_at start -->
        <td>
          <%= time_ago_in_words(journal_method.created_at) %> ago
        </td>
        <!-- Display journal_method.created_at end -->

        <!-- Display journal_method.updated_at start -->
        <td>
          <%= time_ago_in_words(journal_method.updated_at) %> ago
        </td>
        <!-- Display journal_method.updated_at end -->

        <td>
          <a href="/journal_methods/<%= journal_method.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
