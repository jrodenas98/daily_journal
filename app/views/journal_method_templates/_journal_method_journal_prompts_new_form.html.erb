<form action="/create_journal_prompt_from_journal_method" method="post">

  <div class="form-group">
    <label for="prompt_text">
      Prompt text
    </label>

    <textarea id="prompt_text" name="prompt_text" class="form-control" rows="3"><%= @journal_prompt.prompt_text %></textarea>
  </div>

  <div class="form-group">
    <label for="day">
      Day
    </label>

    <input type="text" id="day" name="day" class="form-control" value="<%= @journal_prompt.day %>">
  </div>

  <input type="hidden" name="journal_method_id" value="<%= @journal_method.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create journal prompt
  </button>
</form>
