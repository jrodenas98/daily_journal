<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Journal Prompts

    <a data-toggle="collapse" href="#journal_method_journal_prompts_new_form">
      Add journal prompt
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @journal_method.journal_prompts.each do |journal_prompt| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/journal_prompts/<%= journal_prompt.id %>">
          <%= journal_prompt.prompt_text %>
        </a>

        <a href="/delete_journal_prompt_from_journal_method/<%= journal_prompt.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="journal_method_journal_prompts_new_form">
        <%= render partial: "journal_method_templates/journal_method_journal_prompts_new_form" %>
      </div>
    </div>

  </ul>
</div>
