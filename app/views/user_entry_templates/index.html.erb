<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user entries
    </h1>

    <a href="/user_entries/new" class="btn btn-block btn-outline-secondary">
      Add a new user entry
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "user_entry_templates/user_entries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Prompt
        </th>

        <th>
          Response
        </th>

        <th>
          Headline
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_entries.each do |user_entry| %>
      <tr>
        <td>
          <%= user_entry.id %>
        </td>

        <td>
          <% if user_entry.user.present? %>
            <a href="/users/<%= user_entry.user.id %>">
              <%= user_entry.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if user_entry.prompt.present? %>
            <a href="/journal_prompts/<%= user_entry.prompt.id %>">
              <%= user_entry.prompt.prompt_text %>
            </a>
          <% end %>
        </td>

        <td>
          <%= user_entry.response %>
        </td>

        <td>
          <%= user_entry.headline %>
        </td>

        <td>
          <%= time_ago_in_words(user_entry.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(user_entry.updated_at) %> ago
        </td>

        <td>
          <a href="/user_entries/<%= user_entry.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_entries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
