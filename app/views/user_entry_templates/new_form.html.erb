<h1>
  Add a new user entry
</h1>


<hr>

<form action="/create_user_entry" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="prompt_id">
      Prompt
    </label>

    <%= select_tag(:prompt_id, options_from_collection_for_select(JournalPrompt.all, :id, :prompt_text, @user_entry.prompt_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="response">
      Response
    </label>

    <input type="text" id="response" name="response" class="form-control">
  </div>

  <div class="form-group">
    <label for="headline">
      Headline
    </label>

    <textarea id="headline" name="headline" class="form-control" rows="3"></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create user entry
  </button>
</form>

<hr>

<a href="/user_entries">
  Go back
</a>
